---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import error from '../images/error-404.png';
---

<Layout title="404 - Page Not Found">    
    <div class="flex flex-col items-center justify-items-center gap-7">
        <Image src={error} alt="404 Page Not Found" class="w-full h-auto" height={250} width={250} class="mt-10"/>
        <h1 class="text-5xl">Page not found</h1>
        <p class="text-2xl mb-10">The page you are looking for does not exist. Please check the URL or go back to the homepage.</p>
        <a href="/" class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white">Home</a>
    </div>


</Layout>